<Window
    x:Class="Test1.View.ShowInformation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test1.UserControlBar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ShowInformation"
    WindowStyle="None"
    Width="300"
    Height="500"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid Grid.Column="0" Grid.ColumnSpan="7">
            <local:ControlBarUC />
        </Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                Margin="0,30,0,20"
                HorizontalAlignment="Center"
                FontSize="25"
                FontWeight="Bold"
                Text="Your Information" />
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Bottom" Text="OrderId:" />
                <TextBox
                    x:Name="txtOrderID"
                    Width="100"
                    Margin="60,0,0,0"
                    IsReadOnly="True" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Bottom" Text="PersonId:" />
                <TextBox
                    x:Name="txtFullName"
                    Width="100"
                    Margin="55,10,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Bottom" Text="OrderAddress:" />
                <TextBox
                    x:Name="txtOrderAddress"
                    Width="100"
                    Margin="30,10,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Bottom" Text="Phone Number:" />
                <TextBox
                    x:Name="txtPhoneNumber"
                    Width="100"
                    Margin="22,10,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="btnUpdate"
                    Width="206"
                    Margin="0,50,0,0"
                    Click="btnUpdate_Click"
                    Content="Update" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
