<Window
    x:Class="Test1.CurrentPassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test1.UserControlBar"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CurrentPassword"
    Width="800"
    Height="450"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.4*" />
            <RowDefinition Height="0.4*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.ColumnSpan="7">
            <local:ControlBarUC />
        </Grid>
        <Image
            Grid.Row="1"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Source="C:\Users\lethe\source\repos\Test1\Test1\Image\Daco_4813615.png" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            VerticalAlignment="Center"
            FontSize="22"
            FontWeight="Bold"
            Foreground="{DynamicResource PrimaryHueMidBrush}"
            Text="Set new password"
            TextAlignment="Center" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Text="You new password must be different to &#x0a; previously used passwords"
            TextAlignment="Center" />
        <StackPanel
            Grid.Row="4"
            Grid.Column="2"
            Grid.ColumnSpan="3">
            <TextBlock
                Grid.Row="4"
                Grid.Column="2"
                Margin="0,0,0,5"
                VerticalAlignment="Center"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource PrimaryHueMidBrush}"
                Text="Password"
                TextAlignment="Left" />
            <PasswordBox
                x:Name="newPassword"
                Padding="8"
                materialDesign:HintAssist.HelperText=""
                materialDesign:HintAssist.HelperTextFontSize="10"
                materialDesign:HintAssist.HelperTextStyle="{StaticResource HelperTextStyleOverride}"
                materialDesign:TextFieldAssist.HasClearButton="True"
                BorderBrush="Blue"
                PasswordChanged="PasswordBox_PasswordChanged"
                Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}" />
        </StackPanel>
        <StackPanel
            Grid.Row="5"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Margin="0,20,0,0">
            <TextBlock
                Margin="0,0,0,5"
                VerticalAlignment="Center"
                materialDesign:HintAssist.HelperTextFontSize="10"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{DynamicResource PrimaryHueMidBrush}"
                Text="Confirm Password"
                TextAlignment="Left" />
            <PasswordBox
                x:Name="pwdConfirm"
                Padding="8"
                materialDesign:HintAssist.HelperText=""
                materialDesign:HintAssist.HelperTextFontSize="10"
                materialDesign:HintAssist.HelperTextStyle="{StaticResource HelperTextStyleOverride}"
                materialDesign:TextFieldAssist.HasClearButton="True"
                BorderBrush="Blue"
                PasswordChanged="PasswordBox_PasswordChanged_confirm"
                Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}" />
        </StackPanel>
        <StackPanel
            Grid.Row="7"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Vertical">
            <Button
                Margin="0,20,0,0"
                Background="#FF7535E6"
                Click="Button_Click"
                Content="Reset Password"
                FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
