<Window
    x:Class="Test1.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test1.UserControlBar"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
    Width="800"
    Height="450"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.ColumnSpan="7">
            <local:ControlBarUC />
        </Grid>
        <TextBlock
            Grid.Row="1"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            Margin="0,30,0,0"
            VerticalAlignment="Center"
            FontFamily="Segoe UI Black"
            FontSize="25"
            FontWeight="Bold"
            Foreground="{DynamicResource PrimaryHueMidBrush}"
            Text="Creat New Account" />
        <Image
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Source="C:\Users\lethe\source\repos\Test1\Test1\Image\sign-up.png" />
        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="4"
            Grid.Column="2"
            Grid.ColumnSpan="4"
            Margin="125,131,25,0"
            Orientation="Vertical">
            <TextBlock FontSize="16">
                <Run Text="Already have an account? " />
                <Hyperlink Click="Hyperlink_Click">
                    <Run Text="Login here" />
                </Hyperlink>
            </TextBlock>
            <!--  Enter Name  -->
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                    Text="Name: " />
                <TextBox
                    x:Name="txtUserName"
                    Grid.Column="1"
                    Width="190"
                    Padding="10"
                    HorizontalAlignment="Center"
                    materialDesign:HintAssist.Background="White"
                    materialDesign:HintAssist.Hint="Enter Your Name"
                    materialDesign:HintAssist.HintPaddingBrush="White"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextChanged="txtUserName_TextChanged"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </Grid>
            <!--  Enter PassWord  -->
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                    Text="Password: " />
                <PasswordBox
                    x:Name="txtPassword"
                    Grid.Column="1"
                    Width="190"
                    Padding="10"
                    HorizontalAlignment="Center"
                    materialDesign:HintAssist.Background="White"
                    materialDesign:HintAssist.HelperText=""
                    materialDesign:HintAssist.HelperTextFontSize="10"
                    materialDesign:HintAssist.HelperTextStyle="{StaticResource HelperTextStyleOverride}"
                    materialDesign:HintAssist.Hint="Password"
                    materialDesign:HintAssist.HintPaddingBrush="White"
                    materialDesign:TextFieldAssist.HasClearButton="True"
                    PasswordChanged="txtPassword_PasswordChanged"
                    Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}" />
            </Grid>
            <!--  Email  -->
            <Grid Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="{DynamicResource PrimaryHueMidBrush}"
                    Text="Email: " />
                <TextBox
                    x:Name="txtEmail"
                    Grid.Column="2"
                    Width="190"
                    Padding="10"
                    HorizontalAlignment="Center"
                    materialDesign:HintAssist.Background="White"
                    materialDesign:HintAssist.HelperText=""
                    materialDesign:HintAssist.Hint="Enter Your Email"
                    materialDesign:HintAssist.HintPaddingBrush="White"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextChanged="txtEmail_TextChanged"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </Grid>
            <Button
                x:Name="btnCreateAccount"
                Margin="0,20,0,0"
                Click="btnCreateAccount_Click"
                Content="Creat Account"
                FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
