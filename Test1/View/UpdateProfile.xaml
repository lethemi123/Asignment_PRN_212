<Window
    x:Class="Test1.UpdateProfile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test1.UserControlBar"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="UpdateProfile"
    Width="800"
    Height="450"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="0.1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.ColumnSpan="7">
            <local:ControlBarUC />
        </Grid>
        <DockPanel
            Grid.Row="1"
            Grid.Column="2"
            Grid.ColumnSpan="2">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Black"
                FontSize="25"
                FontWeight="Bold"
                Foreground="{DynamicResource PrimaryHueMidBrush}"
                Text="Your information" />
        </DockPanel>


        <!--  Current Profile  -->
        <WrapPanel
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center">

            <Grid
                Width="505"
                Margin="0,0,0,20"
                HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>


                <TextBox
                    x:Name="txtFirstName"
                    Grid.Row="3"
                    Grid.Column="0"
                    Padding="10"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Background="White"
                    materialDesign:HintAssist.HelperText=""
                    materialDesign:HintAssist.HelperTextFontSize="12"
                    materialDesign:HintAssist.Hint="First Name"
                    materialDesign:HintAssist.HintPaddingBrush="White"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />

                <TextBox
                    x:Name="txtLastName"
                    Grid.Row="3"
                    Grid.Column="2"
                    Padding="10"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Background="White"
                    materialDesign:HintAssist.HelperText=""
                    materialDesign:HintAssist.HelperTextFontSize="12"
                    materialDesign:HintAssist.Hint="Last Name"
                    materialDesign:HintAssist.HintPaddingBrush="White"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </Grid>


            <Grid
                Width="505"
                Margin="0,0,0,10"
                HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="txtPhoneUser"
                    Grid.Column="0"
                    Padding="10"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Background="White"
                    materialDesign:HintAssist.HelperText=""
                    materialDesign:HintAssist.HelperTextFontSize="12"
                    materialDesign:HintAssist.Hint="Phone Number"
                    materialDesign:HintAssist.HintPaddingBrush="White"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />

                <StackPanel
                    Grid.Column="2"
                    Margin="20,0,00,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <RadioButton
                        x:Name="rdoMale"
                        Margin="0,0,20,0"
                        Content="Male"
                        FontSize="14"
                        GroupName="Gender" />
                    <RadioButton
                        x:Name="rdoFeMale"
                        Margin="0,0,20,0"
                        Content="Female"
                        FontSize="14"
                        GroupName="Gender" />
                    <RadioButton
                        x:Name="rdoOther"
                        Content="Other"
                        FontSize="14"
                        GroupName="Gender" />
                </StackPanel>
            </Grid>



            <Grid Width="505" Margin="0,10,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="247.5" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="txtAddress"
                    Grid.Column="0"
                    Padding="10"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Background="White"
                    materialDesign:HintAssist.HelperText=""
                    materialDesign:HintAssist.HelperTextFontSize="12"
                    materialDesign:HintAssist.Hint="Address"
                    materialDesign:HintAssist.HintPaddingBrush="White"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
                <DatePicker
                    Grid.Column="2"
                    Width="140"
                    Padding="10"
                    HorizontalAlignment="Left"
                    materialDesign:HintAssist.Background="White"
                    materialDesign:HintAssist.Hint="Your BirthDay"
                    materialDesign:HintAssist.HintPaddingBrush="White"
                    Style="{StaticResource MaterialDesignOutlinedDatePicker}" />
            </Grid>
            <StackPanel Width="505" Orientation="Vertical">

                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="FilledComboBoxEnabledCheckBox" RenderTransformOrigin="0.561,0.723" />
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        Text="I agree to the terms and conditions" />
                </StackPanel>


                <Button
                    x:Name="btnLogin"
                    Width="150"
                    Margin="0,20,20,0"
                    Background="{StaticResource MaterialDesign.Brush.Primary.Dark}"
                    Click="btnSubmit_Click"
                    Content="Submit"
                    FontWeight="Bold"
                    IsEnabled="{Binding IsChecked, ElementName=FilledComboBoxEnabledCheckBox}" />
            </StackPanel>


        </WrapPanel>
    </Grid>
</Window>
