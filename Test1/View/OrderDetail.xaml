<Window
    x:Class="Test1.View.OrderDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test1.UserControlBar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OrderDetail"
    Width="600"
    Height="600"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="160*" />
            <ColumnDefinition Width="133*" />
            <ColumnDefinition Width="107*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="160*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="60" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="60" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.ColumnSpan="7">
            <local:ControlBarUC />
        </Grid>

        <!--  Header left  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                FontSize="18"
                FontWeight="Bold"
                Text="Shopping House"
                TextAlignment="Center" />
            <TextBlock Text="Lym Shopping" TextAlignment="Center" />
        </StackPanel>
        <!--  Header right  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">

            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="14" Text="No: " />
                <TextBlock Text="{Binding OrderID}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="14" Text="Date: " />
                <TextBlock Text="{Binding DateOfTime}" />
            </StackPanel>

        </StackPanel>
        <!--  Body top  -->
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Orientation="Vertical">
            <DockPanel Margin="0,10,0,0">
                <TextBlock
                    Width="50"
                    VerticalAlignment="Bottom"
                    FontSize="14"
                    Text="Name: " />
                <TextBlock Text="{Binding FullName}" />
            </DockPanel>
            <DockPanel Margin="0,10,0,0">
                <TextBlock
                    Width="50"
                    VerticalAlignment="Bottom"
                    FontSize="14"
                    Text="Address: " />
                <TextBlock Text="{Binding Address}" />
            </DockPanel>
        </StackPanel>
        <!--  Body information  -->
        <DataGrid
            Grid.Row="3"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="5"
            Margin="0,20,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="0.4*"
                    Binding="{Binding ID}"
                    Header="ID" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Name" />
                <DataGridTextColumn
                    Width="0.5*"
                    Binding="{Binding Stock}"
                    Header="Stock" />
                <DataGridTextColumn
                    Width="*"
                    
                    Binding="{Binding UnitPrice}"
                    Header="Unit Price" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TotalAmount}"
                    Header="Total Amount" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,10,20,0"
                FontSize="20"
                FontWeight="Bold"
                Text="Total Amount: " />
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Foreground="{StaticResource ColorRedsolid}"
                Text="{Binding totalAmount}" />
        </StackPanel>
        <StackPanel
            Grid.Row="6"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,10,20,0"
                FontSize="18"
                Text="Total Quantity: " />
            <TextBlock FontSize="16" Text="{Binding TotalQuantity}" />
        </StackPanel>

        <StackPanel
            Grid.Row="7"
            Grid.Column="1"
            Grid.ColumnSpan="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                x:Name="btnAccept"
                Background="#FF00A500"
                BorderBrush="#FF27B041"
                Content="Apccept" />
            <Button
                x:Name="btnRejected"
                Margin="20,0,20,0"
                Background="{StaticResource ColorRedsolid}"
                Content="Rejected" />
            <Button
                x:Name="btnSave"
                Background="{StaticResource ColorSubmit}"
                Content="Save" />
        </StackPanel>
    </Grid>
</Window>
