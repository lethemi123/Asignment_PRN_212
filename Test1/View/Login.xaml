<Window
    x:Class="Test1.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test1.UserControlBar"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="450"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="25" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.ColumnSpan="7">
            <local:ControlBarUC> </local:ControlBarUC>
        </Grid>
        <Image
            Grid.Row="1"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            Width="100"
            VerticalAlignment="Center"
            Source="E:\Asignment_PRN_212\Test1\Image\Daco_5096993.png" />
        <TextBlock
            Grid.Row="3"
            Grid.Column="2"
            Margin="0,0,20,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            FontSize="14"
            FontWeight="Bold"
            Text="User Name: " />
        <TextBox
            x:Name="txtUserName"
            Grid.Row="3"
            Grid.Column="3"
            Padding="10"
            VerticalAlignment="Top"
            materialDesign:HintAssist.Background="White"
            materialDesign:HintAssist.Hint="Enter Name"
            materialDesign:HintAssist.HintPaddingBrush="White"
            
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <TextBlock
            Grid.Row="4"
            Grid.Column="2"
            Margin="0,0,20,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="14"
            FontWeight="bold"
            Text="Password: " />
        <StackPanel Grid.Row="4" Grid.Column="3">
            <PasswordBox
                x:Name="txtPassword"
                Margin="0,10,0,0"
                Padding="10"
                VerticalContentAlignment="Bottom"
                materialDesign:HintAssist.Background="White"
                materialDesign:HintAssist.Hint="Password"
                materialDesign:HintAssist.HintPaddingBrush="White"
                materialDesign:TextFieldAssist.HasClearButton="True"
        
                Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}" />
        </StackPanel>
        <TextBlock
            Grid.Row="5"
            Grid.Column="3"
            Width="100"
            Margin="0,5,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Cursor="Hand"
            MouseDown="ForgotPassword_MouseDown"
            Text="forgot Password? "
            TextAlignment="Right">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="LightGray" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="DarkGray" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <StackPanel
            Grid.Row="6"
            Grid.Column="2"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="btnLogin"
                Width="150"
                Margin="0,10,20,0"
                Background="#FF7535E6"
                Click="btnLogin_Click"
                Content="Login"
                FontWeight="Bold" />
            <Button
                x:Name="btnRegister"
                Width="150"
                Margin="0,10,0,0"
                Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"
                Click="btnRegister_Click"
                Content="SignUp"
                FontWeight="Bold" />
        </StackPanel>

    </Grid>
</Window>
