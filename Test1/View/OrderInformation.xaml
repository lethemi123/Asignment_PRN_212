<Window
    x:Class="Test1.View.OrderInformation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test1.UserControlBar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OrderInformation"
    Width="400"
    Height="450"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid Grid.Column="0" Grid.ColumnSpan="7">
            <local:ControlBarUC />
        </Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                Margin="0,30,0,20"
                HorizontalAlignment="Center"
                FontSize="25"
                FontWeight="Bold"
                Text="Order Information" />
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Bottom" Text="OrderId:" />
                <TextBox
                    x:Name="txtOrderID"
                    Width="100"
                    Margin="80,0,0,0"
                    IsReadOnly="True" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Bottom" Text="Name:" />
                <TextBox
                    x:Name="txtFullName"
                    Width="100"
                    Margin="90,10,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Bottom" Text="OrderAddress:" />
                <TextBox
                    x:Name="txtOrderAddress"
                    Width="100"
                    Margin="50,10,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Bottom" Text="Phone Number:" />
                <TextBox
                    x:Name="txtPhoneNumber"
                    Width="100"
                    Margin="42,10,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Bottom" Text="Description:" />
                <TextBox
                    x:Name="txtDescription"
                    Width="100"
                    Margin="62,10,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <TextBlock VerticalAlignment="Bottom" Text="Total Quantity:" />
                <TextBlock
                    x:Name="txtQuantity"
                    Width="100"
                    Margin="50,10,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                <TextBlock VerticalAlignment="Bottom" Text="Total Price:" />
                <TextBlock
                    x:Name="txtTotalPrice"
                    Width="100"
                    
                    FontSize="16"
                    Margin="70,0,0,0" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="btnAccept"
                    Width="106"
                    Margin="0,50,0,0"
                    Click="btnAccept_Click"
                    BorderBrush="Green"
                    Background="Green"
                    Content="Accept" />
                <Button
                    x:Name="btnReject"
                    Width="106"
                    BorderBrush="Red"
                    Background="Red"
                    Margin="40,50,0,0"
                    Click="btnReject_Click"
                    Content="Reject" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
