<Window x:Class="Test1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test1"      
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">

    <Grid>
       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

 
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <DataGrid 
           x:Name="dataGrid_name"
            Grid.Row="0"
            CanUserAddRows="False"
            AutoGenerateColumns="False"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            IsReadOnly="True"
            ItemsSource="{Binding ItemsDataGridView}"
            SelectionChanged="dataGrid_name_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FName}" Width="*"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="*"/>
                <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1" Margin="0 0 0 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <WrapPanel Grid.Row="0" Margin="0 0 0 0" HorizontalAlignment="Center">
                <DockPanel Margin="5" >
                    <TextBlock Text="ID:"  Width="100" VerticalAlignment="Center" TextAlignment="Center"/>
                    <TextBox IsReadOnly="True" Name="idText" Width="200" Text="{Binding Id, Mode=TwoWay}"/>
                </DockPanel>
                <DockPanel Margin="5">
                    <TextBlock Text="First Name:" Width="100" VerticalAlignment="Center" TextAlignment="Center"/>
                    <TextBox Name="firstNameText" Width="200" Text="{Binding FName, Mode=TwoWay}"/>
                </DockPanel>
                <DockPanel Margin="5">
                    <TextBlock Text="Gender" Width="100" VerticalAlignment="Center" TextAlignment="Center" />
                </DockPanel>
                <DockPanel Margin="5">
                    <TextBlock Text="Full Name:" Width="100" VerticalAlignment="Center" TextAlignment="Center"/>
                    <TextBox Name="fullNameText" Width="200" Text="{Binding Name, Mode=TwoWay}"/>
                </DockPanel>
                <DockPanel Margin="5">
                    <TextBlock Text="Age:" Width="100" VerticalAlignment="Center" TextAlignment="Center"/>
                    <TextBox Name="ageText" Width="200" Text="{Binding Age, Mode=TwoWay}"/>
                </DockPanel>
                <DockPanel Margin="5">
                    <TextBlock Text="Search By Name" Width="100" VerticalAlignment="Center" TextAlignment="Center"/>
                    <TextBox Name="txtSearchbyName" Width="200" TextChanged="txtSearchbyName_TextChanged"/>
                </DockPanel>
            </WrapPanel>


            <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Button x:Name="btnDelete" Click="btnDelete_Click" Content="Delete" Width="100" Margin="5"
                        Background="{DynamicResource ColorRedsolid}"/>
                <Button x:Name="btnShowDataGrid" Click="btnShowDataGrid_Click" Content="Show" Width="100" Margin="5"
                        Background="{DynamicResource SecondaryAccentBrush}"/>
                <Button x:Name="btnUpdate" Click="btnUpdate_Click" Content="Update" Width="100" Margin="5"/>
                <Button x:Name="btnSearch" Click="btnSearch_Click" Content="Search" Width="100" Margin="5"
                        Background="{DynamicResource PrimaryHueMidBrush}"/>
            </WrapPanel>
        </Grid>
    </Grid>
</Window>
