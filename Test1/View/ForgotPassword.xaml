<Window
    x:Class="Test1.ForgotPassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test1.UserControlBar"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ForgotPassword"
    MouseDown="Window_MouseDown"
    Width="800"
    Height="450" ResizeMode="NoResize"
WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.ColumnSpan="7">
            <local:ControlBarUC></local:ControlBarUC>
        </Grid>
        <Image
            Grid.Row="2"
            Grid.RowSpan="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Source="C:\Users\lethe\source\repos\Test1\Test1\Image\Daco_5735318.png" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="3"
            Grid.ColumnSpan="4"
            VerticalAlignment="Top"
            FontFamily="Aria"
            FontSize="30"
            FontWeight="Bold"
            Foreground="{DynamicResource PrimaryHueMidBrush}"
            Text="Forggot your password?" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="3"
            Grid.ColumnSpan="4"
            Margin="0,10,0,0"
            VerticalAlignment="Center"
            FontSize="13"
            Foreground="{DynamicResource MaterialDesign.Brush.Primary.Dark}"
            Text="Please Enter your Email so we can send you otp " />
        <StackPanel
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="4"
            HorizontalAlignment="left"
            Orientation="Horizontal">
            <TextBox
                x:Name="txtEmail"
                Width="321"
                Padding="10"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Background="White"
                materialDesign:HintAssist.Hint="Enter Email Adrress"
                materialDesign:HintAssist.HintPaddingBrush="White"
                BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}"
                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
        </StackPanel>
        <Button
            x:Name="btnCheckEmal"
            Grid.Row="4"
            Grid.RowSpan="5" FontWeight="Bold"
            Grid.Column="3"
            Grid.ColumnSpan="5"
            Width="320"
            Margin="0,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Reset Password"
            Background="#FF7535E6" Click="btnCheckEmal_Click"/>
        <TextBlock
            Grid.Row="6"
            Grid.Column="3"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            Cursor="Hand"
            FontSize="14"
            FontWeight="Bold"
            MouseDown="BackLogin_MouseDown"
            Text="Back to signin">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="LightGray" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="Gray" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</Window>
