<Window
    x:Class="Test1.View.ViewOrder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test1.UserControlBar"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="OrderDetail"
    Width="800"
    Height="600"
    WindowStyle="None"
    Background="White"
    MouseDown="Window_MouseDown"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="160*" />
            <ColumnDefinition Width="133*" />
            <ColumnDefinition Width="107*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="160*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="60" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="60" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.ColumnSpan="7">
            <local:ControlBarUC />
        </Grid>

        <!--  Header left  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                FontSize="18"
                FontWeight="Bold"
                Text="Shopping House"
                TextAlignment="Center" />
            <TextBlock Text="Lym Shopping" TextAlignment="Center" />
        </StackPanel>
        <!--  Header right  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">

            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="14" Text="No: " />
                <TextBlock x:Name="txtOrderID" Text="{Binding CartId}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="14" Text="Date: " />
                <TextBlock
                    x:Name="txtOrderDate"
                    VerticalAlignment="Bottom"
                    Text="{Binding DateOfTime}" />
            </StackPanel>

        </StackPanel>
        <!--  Body top  -->
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Orientation="Vertical">
            <DockPanel Margin="0,10,0,0">
                <TextBlock
                    Width="50"
                    VerticalAlignment="Bottom"
                    FontSize="14"
                    Text="Name: " />
                <TextBlock x:Name="tblFullName" VerticalAlignment="Bottom" />
            </DockPanel>
            <DockPanel Margin="0,10,0,0">
                <TextBlock
                    Width="50"
                    VerticalAlignment="Bottom"
                    FontSize="14"
                    Text="Address: " />
                <TextBlock
                    x:Name="tblAddress"
                    Margin="10,0,0,0"
                    VerticalAlignment="Bottom" />
            </DockPanel>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.Column="3"
            Grid.ColumnSpan="3"
            Orientation="Horizontal">
            <TextBlock
                Width="50"
                VerticalAlignment="Bottom"
                FontSize="14"
                Text="Phone: "
                TextAlignment="Center" />
            <TextBlock
                x:Name="tblPhoneNumber"
                Margin="10,0,0,0"
                VerticalAlignment="Bottom" />

        </StackPanel>
        <!--  Body information  -->
        <DataGrid
            x:Name="dataGridOrderDetail"
            Grid.Row="3"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="5"
            Margin="0,20,0,0"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
             IsReadOnly="False"
            SelectionChanged="dataGridOrderDetail_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="50">
                    <DataGridTemplateColumn.Header>
                        <CheckBox x:Name="headerCheckbox" Click="headerCheckbox_Click" />
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Width="0.7*"
                    Binding="{Binding ProductId}"
                    Header="ID"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Name}"
                    Header="Name"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="0.7*"
                    Binding="{Binding Variant}"
                    Header="Variant"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="0.7*"
                    Binding="{Binding Quantity}"
                    Header="Quantity"
                    IsReadOnly="True" />

                <DataGridTextColumn
                    Width="0.7*"
                    Binding="{Binding UnitPrice}"
                    Header="Unit Price"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Width="0.7*"
                    Binding="{Binding TotalAmount}"
                    Header="Total Amount"
                    IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,10,20,0"
                FontSize="20"
                FontWeight="Bold"
                Text="Total Amount: " />
            <TextBlock
                x:Name="txtTotalAmount"
                VerticalAlignment="Bottom"
                FontSize="20"
                FontWeight="Bold"
                Foreground="{StaticResource ColorRedsolid}"
                Text="{Binding totalAmount}" />
        </StackPanel>
        <StackPanel
            Grid.Row="6"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,10,20,0"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="Bold"
                Text="Total Quantity: " />
            <TextBlock
                x:Name="txtTotalQuantity"
                VerticalAlignment="Bottom"
                FontSize="20"
                Text="{Binding TotalQuantity}" />
        </StackPanel>

        <StackPanel
            Grid.Row="7"
            Grid.Column="1"
            Grid.ColumnSpan="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                x:Name="btnAccept"
                Background="#FF00A500"
                BorderBrush="#FF27B041"
                Click="btnAccept_Click"
                Content="Order" />
            <Button
                x:Name="btnRejected"
                Margin="20,0,20,0"
                Background="{StaticResource ColorRedsolid}"
                Click="btnRejected_Click"
                Content="Delete" />
            <Button
                x:Name="btnSave"
                Background="{StaticResource ColorSubmit}"
                Content="Save" />
        </StackPanel>
    </Grid>
</Window>
