<Window
    x:Class="Test1.View.CreaditCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test1.UserControlBar"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="300"
    Height="450"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.ColumnSpan="7">
            <local:ControlBarUC />
        </Grid>
        <Image
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Source="C:\Users\lethe\source\repos\Test1\Test1\Image\QRCredit.jpg" />
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Orientation="Vertical">
            <StackPanel Margin="0 10 0 0"  Orientation="Horizontal">
                <TextBlock
                    Width="70"
                    HorizontalAlignment="Left"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Name: " />
                <TextBlock
                    Width="80"
                    HorizontalAlignment="Left"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="LE THE MY" />
            </StackPanel>
            <StackPanel Margin="0 10 0 0"  Orientation="Horizontal">
                <TextBlock
                    Width="70"
                    HorizontalAlignment="Left"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Bank: " />
                <TextBlock
                    HorizontalAlignment="Left"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Techcombank" />
            </StackPanel>
            <StackPanel Margin="0 10 0 0"  Orientation="Horizontal">
                <TextBlock
                    Width="70"
                    HorizontalAlignment="Left"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="STK: " />
                <TextBlock
                    Width="70"
                    HorizontalAlignment="Left"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="LYM123 " />
            </StackPanel>
            <StackPanel Margin="0 10 0 0" Orientation="Horizontal">
                <TextBlock
                    Width="70"
                    HorizontalAlignment="Left"
                    FontSize="16"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Text="MSSV" />
                <TextBox
                    x:Name="txtInputMSSV"
                    Padding="5"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Background="White"
                    Width="120"
                    materialDesign:HintAssist.HintPaddingBrush="White"
                   
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </StackPanel>
            <StackPanel Margin="0 20 0 0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Orientation="Horizontal">
                <Button x:Name="btnSaveCreadit" Width="80" Margin="0 0 20 0" Background="{StaticResource ColorSubmit }" Content="Done" FontWeight="Bold" Click="btnSaveCreadit_Click"/>
                <Button x:Name="btnExit" Width="80" Background="{StaticResource ColorRedsolid}" Content="exit" FontWeight="Bold" Click="btnExit_Click"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
