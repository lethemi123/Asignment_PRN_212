<Window
    x:Class="Test1.Manage.Admin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test1.UserControlBar"
    xmlns:local1="clr-namespace:Test1.Manage"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="1000"
    Height="450"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0" Grid.ColumnSpan="7">
            <local:ControlBarUC Control.MouseDoubleClick="ControlBarUC_MouseDoubleClick" />
        </Grid>
        <Grid Grid.Row="1">
            <materialDesign:Card>
                <TabControl Style="{StaticResource MaterialDesignNavigationRailTabControl}" TabStripPlacement="left">

                    <!--  Home Page  -->
                    <TabItem Width="80">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon
                                    Width="30"
                                    Height="30"
                                    Margin="0,0,0,3"
                                    HorizontalAlignment="Center"
                                    Kind="Home" />
                                <TextBlock HorizontalAlignment="Center" Text="Home" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>
                            <Border
                                Grid.Row="2"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Width="650"
                                Height="1"
                                Margin="10,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="Black"
                                BorderBrush="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}"
                                Opacity="0.2" />
                            <Border
                                Grid.Row="2"
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Width="1"
                                Height="220"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Background="Black"
                                BorderBrush="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}"
                                Opacity="0.2" />
                            <Grid
                                Grid.Row="1"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Margin="10,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Grid.Column="0"
                                    Width="250"
                                    Padding="20"
                                    Background="#FFDDDDDD"
                                    CornerRadius="10"
                                    Opacity="1">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Text="Total Persons"
                                            TextAlignment="Center" />
                                        <TextBlock
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="{StaticResource MaterialDesign.Brush.Primary.Dark}"
                                            Text="{Binding totalPersons}" />
                                    </StackPanel>
                                </Border>
                                <Border
                                    Grid.Column="1"
                                    Width="250"
                                    Padding="20"
                                    Background="#FFDDDDDD"
                                    CornerRadius="10">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Text="Total Order"
                                            TextAlignment="Center" />
                                        <TextBlock
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="{StaticResource ColorRedsolid}"
                                            Text="{Binding totalOrder}" />
                                    </StackPanel>
                                </Border>
                                <Border
                                    Grid.Column="2"
                                    Width="250"
                                    Padding="20"
                                    Background="#FFDDDDDD"
                                    CornerRadius="10">
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Text="Your Wallet"
                                            TextAlignment="Center" />
                                        <TextBlock
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="Green"
                                            Text="{Binding totalOrderBill}" />
                                    </StackPanel>
                                </Border>


                            </Grid>
                            <Grid
                                Grid.Row="2"
                                Grid.RowSpan="2"
                                Grid.Column="1">
                                <Image
                                    Width="500"
                                    Margin="0,30,0,0"
                                    Source="C:\Users\lethe\source\repos\Test1\Test1\Image\Karma is a Cat.jpg" />

                            </Grid>

                        </Grid>
                    </TabItem>

                    <!--  ProFile  -->
                    <TabItem Width="80">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon
                                    Width="30"
                                    Height="30"
                                    Margin="0,0,0,3"
                                    HorizontalAlignment="Center"
                                    Kind="CardAccountDetails" />
                                <TextBlock HorizontalAlignment="Center" Text="Profile" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="0.5*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>
                            <Border
                                Grid.Row="2"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Width="670"
                                Height="1"
                                Margin="10,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="Black"
                                BorderBrush="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}"
                                Opacity="0.2" />
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="10,10,0,0"
                                Orientation="Vertical">
                                <TextBlock
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Text="My Profile" />
                                <TextBlock Margin="0,10,0,0" Text=" Manage profile information for account security" />
                            </StackPanel>
                            <Border
                                Grid.Row="2"
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Width="1"
                                Height="270"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Background="Black"
                                BorderBrush="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}"
                                Opacity="0.2" />
                            <StackPanel
                                Grid.Row="2"
                                Grid.RowSpan="2"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <Image
                                    x:Name="ProfileImage"
                                    Width="100"
                                    Height="100"
                                    Margin="0,30,0,30"
                                    Source="{Binding pathImagePerson}">
                                    <Image.Clip>
                                        <EllipseGeometry
                                            Center="50,50"
                                            RadiusX="50"
                                            RadiusY="50" />
                                    </Image.Clip>
                                </Image>
                                <Button
                                    x:Name="btnChoosePicture"
                                    Width="150"
                                    Margin="0,0,0,20"
                                    HorizontalContentAlignment="Center"
                                    Click="btnChoosePicture_Click"
                                    Content="Choose Picture" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{StaticResource ColorGrayBoder}"
                                    Text=" 49 / 5.000 Maximum file size 1 MB Format: .JPEG, .PNG"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />

                            </StackPanel>
                            <Grid
                                Grid.Row="2"
                                Grid.RowSpan="2"
                                Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel
                                    Grid.Column="0"
                                    Height="187"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                    <TextBlock
                                        Margin="0,0,0,10"
                                        FontSize="15"
                                        Text="User Name " />
                                    <TextBlock
                                        Margin="0,8,0,10"
                                        FontSize="15"
                                        Text="Full Name "
                                        TextAlignment="Right" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="15"
                                        Text="Email "
                                        TextAlignment="Right" />
                                    <TextBlock
                                        Margin="0,12,0,0"
                                        FontSize="15"
                                        Text="Number "
                                        TextAlignment="Right" />
                                    <TextBlock
                                        Margin="0,10,0,0"
                                        FontSize="15"
                                        Text="Gender "
                                        TextAlignment="Right" />
                                    <TextBlock
                                        Margin="0,12,0,0"
                                        FontSize="15"
                                        Text="Birtday "
                                        TextAlignment="Right" />
                                </StackPanel>

                                <StackPanel
                                    Grid.Column="2"
                                    Margin="15,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBox
                                        x:Name="txtUserName"
                                        Margin="0,0,0,10"
                                        Cursor="None"
                                        IsReadOnly="True" />
                                    <TextBox x:Name="txtFullName" Margin="0,0,0,10" />
                                    <TextBox x:Name="txtEmail" Margin="0,0,0,10" />
                                    <TextBox x:Name="txtPhoneNumber" Margin="0,0,0,10" />
                                    <StackPanel
                                        Grid.Column="2"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <RadioButton
                                            x:Name="rdoMale"
                                            Margin="0,0,20,0"
                                            Checked="rdoMale_Checked"
                                            Content="Male"
                                            GroupName="Gender" />
                                        <RadioButton
                                            x:Name="rdoFeMale"
                                            Margin="0,0,20,0"
                                            Content="Female"
                                            GroupName="Gender" />
                                        <RadioButton
                                            x:Name="rdoOther"
                                            Content="Other"
                                            GroupName="Gender" />
                                    </StackPanel>
                                    <DatePicker materialDesign:TextFieldAssist.HasClearButton="True" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                                </StackPanel>
                                <Button
                                    x:Name="btnSaveProFile"
                                    Grid.ColumnSpan="2"
                                    Width="100"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Background="{StaticResource ColorSave}"
                                    Content="Save" />
                            </Grid>
                        </Grid>
                    </TabItem>




                    <!--  Products  -->
                    <TabItem Width="80">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon
                                    Width="30"
                                    Height="30"
                                    Margin="0,0,0,3"
                                    HorizontalAlignment="Center"
                                    Kind="PackageVariantClosed" />
                                <TextBlock HorizontalAlignment="Center" Text="Products" />
                            </StackPanel>
                        </TabItem.Header>

                        <!--  DataGrid Products  -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="0.6*" />
                            </Grid.RowDefinitions>

                            <!--  Funtions  -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="0.6*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="0.5*" />
                                    </Grid.RowDefinitions>
                                    <!--  Conlum1  -->
                                    <StackPanel
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Width="80"
                                                Margin="0,0,20,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Text="Product ID"
                                                TextAlignment="Right" />
                                            <TextBox
                                                x:Name="txtNameProduct"
                                                Width="100"
                                                Text="{Binding ProductId}" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Width="80"
                                                Margin="0,0,20,0"
                                                VerticalAlignment="Center"
                                                Text="Product Name"
                                                TextAlignment="Right" />
                                            <TextBox
                                                x:Name="txtdsad"
                                                Width="100"
                                                Text="{Binding ProductName}" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Width="80"
                                                Margin="0,0,20,0"
                                                VerticalAlignment="Center"
                                                Text="Categrory"
                                                TextAlignment="Right" />
                                            <ComboBox x:Name="cbxCateGrory" Width="100">
                                                <ComboBoxItem>
                                                    <TextBlock Text="Computer" />
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="SmarthPhone" />
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Mouse" />
                                                </ComboBoxItem>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Width="80"
                                                Margin="0,0,20,0"
                                                VerticalAlignment="Center"
                                                Text="Description"
                                                TextAlignment="Right" />
                                            <TextBox x:Name="txtDescription" Width="160" />
                                        </StackPanel>
                                    </StackPanel>
                                    <!--  Conlum2  -->
                                    <StackPanel
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Width="50"
                                                Margin="0,0,20,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Text="Stock"
                                                TextAlignment="Right" />
                                            <TextBox x:Name="txtStockProduct" Width="100" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Width="50"
                                                Margin="0,0,20,0"
                                                VerticalAlignment="Center"
                                                Text="Price($):"
                                                TextAlignment="Right" />
                                            <TextBox x:Name="txtPrice" Width="100" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Width="50"
                                                Margin="0,0,20,0"
                                                VerticalAlignment="Center"
                                                Text="Status: "
                                                TextAlignment="Right" />
                                            <ComboBox x:Name="cbxStatusProduct" Width="100">
                                                <ComboBoxItem>
                                                    <TextBlock Text="Active" />
                                                </ComboBoxItem>
                                                <ComboBoxItem>
                                                    <TextBlock Text="Sold Out" />
                                                </ComboBoxItem>
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <Button
                                            x:Name="btnCreateProduct"
                                            Width="80"
                                            Margin="0,0,20,0"
                                            Content="Create" />
                                        <Button
                                            x:Name="btnUpdateProduct"
                                            Width="80"
                                            Margin="0,0,20,0"
                                            Content="Update" />
                                        <Button
                                            x:Name="btnClearProduct"
                                            Width="80"
                                            Margin="0,0,20,0"
                                            Content="Clear" />
                                    </StackPanel>
                                </Grid>

                                <!--  button click  -->
                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                    <Grid>
                                        <Image
                                            x:Name="ProductImage"
                                            Width="100"
                                            Height="100"
                                            Margin="0,0,0,20"
                                            Source="{Binding ImangePathProduct}">
                                            <Image.Clip>
                                                <EllipseGeometry
                                                    Center="50,50"
                                                    RadiusX="50"
                                                    RadiusY="50" />
                                            </Image.Clip>
                                        </Image>
                                    </Grid>
                                    <Button
                                        x:Name="btnBowseImageProduc"
                                        Width="100"
                                        Click="btnBowseImageProduc_Click"
                                        Content="Bownse" />



                                </StackPanel>
                            </Grid>

                            <!--  DataGrid Product  -->
                            <DataGrid
                                x:Name="DataGridProduct"
                                Grid.Row="0"
                                materialDesign:DataGridAssist.SelectedCellBorderBrush="{x:Null}"
                                AutoGenerateColumns="False"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CanUserAddRows="False"
                                HeadersVisibility="All"
                                IsReadOnly="True"
                                ItemsSource="{Binding ItemDataGridProducts}"
                                SelectionMode="Single"
                                SelectionUnit="FullRow">
                                <DataGrid.Columns>

                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.Header>
                                            <CheckBox x:Name="HeaderCheckbox" Click="HeaderCheckbox_Click" />
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>


                                    <DataGridTextColumn Width="auto" Binding="{Binding ProductId}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="ProductId" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Width="auto" Binding="{Binding ProductName}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Name" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Width="auto" Binding="{Binding ProductDescription}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Description" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Width="auto" Binding="{Binding Stock}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Stock" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Width="auto" Binding="{Binding Price}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Price" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Width="auto" Binding="{Binding CateGoryID}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Categories" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Width="auto" Binding="{Binding CreatAt}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Create At" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Width="auto" Binding="{Binding UpdateAt}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Update At" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.Header>
                                            <TextBlock Text="Image" />
                                        </DataGridTemplateColumn.Header>

                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image
                                                    Width="50"
                                                    Height="50"
                                                    Source="{Binding ImangePathProduct}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>


                                    <DataGridTextColumn Width="auto" Binding="{Binding Status}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Status" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>


                    <!--  Manage Account  -->
                    <TabItem Width="80">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon
                                    Width="30"
                                    Height="30"
                                    Margin="0,0,0,3"
                                    HorizontalAlignment="Center"
                                    Kind="AccountGroupOutline" />
                                <TextBlock HorizontalAlignment="Center" Text="Account" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="0.5*" />
                            </Grid.RowDefinitions>

                            <DataGrid
                                x:Name="DataGridAccount"
                                materialDesign:DataGridAssist.SelectedCellBorderBrush="{x:Null}"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                HeadersVisibility="All"
                                IsReadOnly="True"
                                ItemsSource="{Binding Items1}"
                                SelectionChanged="DataGrid_SelectionChanged"
                                SelectionUnit="{Binding ElementName=selectionUnitComboBox, Path=SelectedValue}">




                                <DataGrid.Columns>
                                    <DataGridTextColumn Width="50" Binding="{Binding Id}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="ID" />
                                        </DataGridTextColumn.Header>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Binding="{Binding userName}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="User Name" />
                                        </DataGridTextColumn.Header>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Binding="{Binding FullName}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Full Name" />
                                        </DataGridTextColumn.Header>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Binding="{Binding Age}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Age" />
                                        </DataGridTextColumn.Header>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Binding="{Binding Gender}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Gender" />
                                        </DataGridTextColumn.Header>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Binding="{Binding RoleAccount}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Role" />
                                        </DataGridTextColumn.Header>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Width="120" Binding="{Binding phoneNumber}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="PhoneNumber" TextAlignment="Center" />
                                        </DataGridTextColumn.Header>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Width="170" Binding="{Binding Email}">

                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="Email" TextAlignment="Center" />
                                        </DataGridTextColumn.Header>
                                    </DataGridTextColumn>

                                    <DataGridTextColumn Width="170" Binding="{Binding Address}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock Text="address" />
                                        </DataGridTextColumn.Header>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="0.6*" />
                                </Grid.ColumnDefinitions>
                                <!--  Infomation Customer  -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="160" />
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="160" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  ID  -->
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Text="ID:" />
                                    <TextBox
                                        Name="txtUserIdAC"
                                        Grid.Column="1"
                                        Width="140"
                                        HorizontalAlignment="Center"
                                        Text="{Binding Id, Mode=TwoWay}" />

                                    <!--  User Name  -->
                                    <TextBlock
                                        Grid.Row="0"
                                        Grid.Column="3"
                                        VerticalAlignment="Center"
                                        Text="User Name:" />
                                    <TextBox
                                        Name="txtUserNameAC"
                                        Grid.Row="0"
                                        Grid.Column="4"
                                        Width="140"
                                        Text="{Binding userName, Mode=TwoWay}" />

                                    <!--  Full Name  -->
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Text="Full Name:" />
                                    <TextBox
                                        Name="txtFullNameAC"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Width="140"
                                        Text="{Binding FullName, Mode=TwoWay}" />

                                    <!--  Age  -->
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.Column="3"
                                        VerticalAlignment="Center"
                                        Text="Age:" />
                                    <TextBox
                                        Name="txtAgeAC"
                                        Grid.Row="1"
                                        Grid.Column="4"
                                        Width="140"
                                        Text="{Binding Age, Mode=TwoWay}" />

                                    <!--  Gender  -->
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Text="Gender:" />
                                    <TextBox
                                        Name="txtGenderAC"
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Width="140"
                                        Text="{Binding Gender, Mode=TwoWay}" />

                                    <!--  Address  -->
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="3"
                                        VerticalAlignment="Center"
                                        Text="Address:" />
                                    <TextBox
                                        Name="txtAddress"
                                        Grid.Row="2"
                                        Grid.Column="4"
                                        Width="140"
                                        Text="{Binding Address, Mode=TwoWay}" />

                                    <!--  Phone Number  -->
                                    <TextBlock
                                        Grid.Row="3"
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Text="Phone Number:" />
                                    <TextBox
                                        Name="txtPhoneNumberAC"
                                        Grid.Row="3"
                                        Grid.Column="1"
                                        Width="140"
                                        Text="{Binding PhoneNumber, Mode=TwoWay}" />

                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="0"
                                        VerticalAlignment="Bottom"
                                        Text="Role:" />
                                    <StackPanel
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        Margin="0,10,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <RadioButton
                                            x:Name="rdoAdmin"
                                            Margin="0,0,20,0"
                                            Content="Admin"
                                            GroupName="Role" />
                                        <RadioButton
                                            x:Name="rdoCustomer"
                                            Margin="0,0,20,0"
                                            Content="Customer"
                                            GroupName="Role" />
                                    </StackPanel>


                                    <!--  Email  -->
                                    <TextBlock
                                        Grid.Row="3"
                                        Grid.Column="3"
                                        VerticalAlignment="Center"
                                        Text="Email:" />
                                    <TextBox
                                        Name="txtEmailAC"
                                        Grid.Row="3"
                                        Grid.Column="4"
                                        Width="140"
                                        Text="{Binding Email, Mode=TwoWay}" />

                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="3"
                                        VerticalAlignment="Center"
                                        Text="PassWord: " />
                                    <PasswordBox
                                        x:Name="pswdAC"
                                        Grid.Row="4"
                                        Grid.Column="4"
                                        Width="150" />


                                </Grid>
                                <!--  Button Functions  -->
                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                    <!--  Search By Name  -->
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="10"
                                            VerticalAlignment="Center"
                                            Text="Search By Name:" />
                                        <TextBox
                                            x:Name="txtSearchAC"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Width="150"
                                            Margin="5" />
                                    </StackPanel>

                                    <!--  Buttons  -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            x:Name="btnCreateAC"
                                            Grid.Column="0"
                                            Width="100"
                                            Margin="5"
                                            Background="{StaticResource ColorSubmit}"
                                            Content="Create" />
                                        <Button
                                            x:Name="btnSearchAC"
                                            Grid.Column="1"
                                            Width="100"
                                            Margin="5"
                                            Background="{StaticResource PrimaryHueMidBrush}"
                                            Content="Search" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            x:Name="btnUpdateAC"
                                            Grid.Column="0"
                                            Width="100"
                                            Margin="5"
                                            Background="{StaticResource MaterialDesign.Brush.Primary.Dark}"
                                            Content="Update" />
                                        <Button
                                            x:Name="btnDeleteAC"
                                            Grid.Column="1"
                                            Width="100"
                                            Margin="5"
                                            Background="{StaticResource ColorRedsolid}"
                                            Content="Delete" />
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </TabItem>





                    <!--  Manage Bills  -->
                    <TabItem Width="80">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon
                                    Width="30"
                                    Height="30"
                                    Margin="0,0,0,3"
                                    HorizontalAlignment="Center"
                                    Kind="Clipboard" />
                                <TextBlock HorizontalAlignment="Center" Text="Bills" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid Margin="16">
                            <DataGrid
                                Grid.Row="0"
                                materialDesign:DataGridAssist.SelectedCellBorderBrush="{x:Null}"
                                AutoGenerateColumns="False"
                                BorderBrush="Black"
                                BorderThickness="1"
                                CanUserAddRows="False"
                                HeadersVisibility="All"
                                IsReadOnly="True"
                                ItemsSource="{Binding ItemHistoryBills}"
                                SelectionMode="Single"
                                SelectionUnit="FullRow">
                                <DataGrid.Columns>

                                    <!--  Order ID  -->
                                    <DataGridTextColumn Width="auto" Binding="{Binding OrderBillId}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock FontSize="14" Text="Order ID" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Name  -->
                                    <DataGridTextColumn Width="80" Binding="{Binding OrderBillName}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock FontSize="14" Text="Name" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Phone  -->
                                    <DataGridTextColumn Width="80" Binding="{Binding OrderPhone}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock FontSize="14" Text="Phone" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Email  -->
                                    <DataGridTextColumn Width="80" Binding="{Binding OrderEmail}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock FontSize="14" Text="Email" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Total  -->
                                    <DataGridTextColumn Width="130" Binding="{Binding TotalOfbills}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock FontSize="14" Text="Total Amount" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  Created At  -->
                                    <DataGridTextColumn Width="100" Binding="{Binding OrderCreatAt}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock FontSize="14" Text="Created at" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <!--  Created Update  -->
                                    <DataGridTextColumn Width="140" Binding="{Binding OrderCreateUpdate}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock FontSize="14" Text="Create Update" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>



                                    <!--  Content  -->
                                    <DataGridTextColumn Width="auto" Binding="{Binding ContentOrderBill}">
                                        <DataGridTextColumn.Header>
                                            <TextBlock FontSize="14" Text="Content" />
                                        </DataGridTextColumn.Header>
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                    <!--  ComboBox Column for Status  -->
                                    <DataGridTemplateColumn Width="auto">
                                        <DataGridTemplateColumn.Header>
                                            <TextBlock FontSize="14" Text="Status" />
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Status}" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>

                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                    </TabItem>
                </TabControl>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Window>
