<Window
    x:Class="Test1.Manage.Customer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test1.UserControlBar"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Customer"
    Width="1000"
    Height="450"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <local:ControlBarUC Control.MouseDoubleClick="ControlBarUC_MouseDoubleClick" />
        </Grid>
        <Grid Grid.Row="1">
            <materialDesign:Card>
                <TabControl Style="{StaticResource MaterialDesignNavigationRailTabControl}" TabStripPlacement="left">
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon
                                    Width="30"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    Kind="Home" />
                                <TextBlock HorizontalAlignment="Center" Text="Home" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel Margin="16">
                            <TextBlock
                                Margin="0,0,0,8"
                                Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                Text="WelCome to my Shop" />
                            <TextBlock>
                                <Run Text="tab 1 content. Default look and behaviors." />
                                <LineBreak />
                                <LineBreak />
                                <Run FontStyle="Italic">
                                    Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit...
                                </Run>
                            </TextBlock>
                        </StackPanel>
                    </TabItem>

                    <!--  Cart Shopping  -->

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon
                                    Width="30"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    Kind="Cart" />
                                <TextBlock HorizontalAlignment="Center" Text="Shop" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid Background="{StaticResource MaterialDesign.Brush.Chip.Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.6*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70" />
                                <RowDefinition Height="80" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="10,5,0,0"
                                Background="White"
                                CornerRadius="10" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="30,5,10,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                                <TextBox
                                    Width="200"
                                    Height="40"
                                    Padding="20,0,0,0"
                                    HorizontalAlignment="Left"
                                    materialDesign:HintAssist.Hint="Search by Name"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}" />


                            </StackPanel>
                            <StackPanel
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center">
                                <ComboBox
                                    x:Name="FilledComboBox"
                                    materialDesign:HintAssist.Hint="Type"
                                    IsEnabled="{Binding Path=IsChecked, ElementName=FilledComboBoxEnabledCheckBox}"
                                    Style="{StaticResource MaterialDesignFilledComboBox}">
                                    <ComboBoxItem Content="Item 1" />
                                    <ComboBoxItem Content="Item 2" />
                                    <ComboBoxItem Content="Item 3" />
                                </ComboBox>
                            </StackPanel>

                            <!--  bill order of customer  -->
                            <Border
                                Grid.Row="0"
                                Grid.RowSpan="4"
                                Grid.Column="3"
                                Margin="10,10,20,0"
                                Padding="10"
                                Background="#f5f5f5"
                                BorderBrush="#ccc"
                                BorderThickness="1"
                                CornerRadius="10">

                                <StackPanel>
                                    <!--  Ảnh sản phẩm ở trên cùng  -->
                                    <Grid Margin="0,0,0,0" VerticalAlignment="Top">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Button "View Order"  -->
                                        <Button
                                            x:Name="btnViewOrder"
                                            Grid.Column="0"
                                            Width="120"
                                            Margin="5"
                                            HorizontalAlignment="Right"
                                            Background="Orange"
                                            Content="View Order"
                                            FontWeight="Bold"
                                            Foreground="White" />

                                        <!--  Button "Clear"  -->
                                        <Button
                                            x:Name="btnClear"
                                            Grid.Column="1"
                                            Width="100"
                                            Margin="5"
                                            HorizontalAlignment="Left"
                                            Background="{StaticResource PrimaryHueMidBrush}"
                                            Content="Order"
                                            FontWeight="Bold"
                                            Foreground="White" />
                                    </Grid>
                                    <Image
                                        Width="100"
                                        Height="100"
                                        Margin="0,20,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        Source="{Binding ImangePathProduct}" />

                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="0.5*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>

                                        <!--  Product Name  -->
                                        <StackPanel
                                            Grid.Column="0"
                                            Margin="0,5"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="Name: " />
                                            <TextBlock FontSize="16" Text="{Binding ProductName}" />
                                        </StackPanel>



                                        <!--  Product ID  -->
                                        <StackPanel
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="ID: " />
                                            <TextBlock FontSize="16" Text="{Binding ProductId}" />
                                        </StackPanel>

                                        <!--  Type  -->
                                        <StackPanel
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="0,10,0,0"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="Type: " />
                                            <TextBlock FontSize="16" Text="{Binding ProductType}" />
                                        </StackPanel>

                                        <!--  Price  -->
                                        <StackPanel
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="0,10,0,0"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="Price: " />
                                            <TextBlock FontSize="16" Text="{Binding ProductPrice}" />
                                        </StackPanel>

                                        <StackPanel
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Orientation="Vertical">
                                            <!--  Quantity with NumericUpDown  -->
                                            <Grid
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                Margin="0,10,0,0">

                                                <TextBlock
                                                    Grid.Column="0"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="Quantity: " />

                                                <materialDesign:NumericUpDown
                                                    Width="150"
                                                    Margin="10,0,0,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Value="1" />
                                            </Grid>
                                            <!--  Description  -->
                                            <StackPanel
                                                Grid.Column="1"
                                                Margin="0,15"
                                                Orientation="Horizontal">
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="Description: " />
                                                <TextBlock
                                                    Height="30"
                                                    FontSize="16"
                                                    Text="{Binding ProductDescription}"
                                                    TextWrapping="Wrap" />
                                            </StackPanel>
                                            <Border
                                                Width="300"
                                                Height="1"
                                                Background="{StaticResource ColorGrayBoder}"
                                                Opacity="2" />
                                        </StackPanel>


                                    </Grid>
                                    <Grid VerticalAlignment="Bottom">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.3*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Column="0"
                                            HorizontalAlignment="Center"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Text="Total" />
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Center"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Foreground="Green"
                                            Text="{Binding totalProducts}" />

                                    </Grid>
                                </StackPanel>
                            </Border>





                            <!--  Information shop  -->
                            <Border
                                Grid.Row="1"
                                Grid.RowSpan="3"
                                Grid.ColumnSpan="2"
                                Margin="10,10,0,0"
                                Background="White"
                                CornerRadius="10">
                                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding ListProducts}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border
                                                    Width="220"
                                                    Height="290"
                                                    Margin="10"
                                                    Padding="10"
                                                    Background="#333"
                                                    BorderBrush="Gray"
                                                    BorderThickness="1"
                                                    CornerRadius="12">
                                                    <StackPanel>
                                                        <!--  Ảnh sản phẩm  -->
                                                        <Image
                                                            Height="120"
                                                            Margin="0,0,0,10"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Source="{Binding ImangePathProduct}"
                                                            Stretch="UniformToFill" />

                                                        <!--  Thông tin cơ bản của sản phẩm  -->
                                                        <StackPanel
                                                            Margin="0,5,0,0"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Top">
                                                            <TextBlock
                                                                FontSize="18"
                                                                FontWeight="Bold"
                                                                Foreground="White"
                                                                Text="{Binding ProductName}" />

                                                            <TextBlock
                                                                Margin="0,5,0,5"
                                                                FontSize="14"
                                                                Foreground="#D3D3D3"
                                                                Text="{Binding ProductDescription}" />

                                                            <TextBlock
                                                                Margin="0,5,0,0"
                                                                FontSize="14"
                                                                Foreground="White">
                                                                <Run FontWeight="Bold" Text="ID: " />
                                                                <Run Text="{Binding ProductId}" />
                                                            </TextBlock>

                                                            <TextBlock
                                                                Margin="0,5,0,0"
                                                                FontSize="14"
                                                                Foreground="White">
                                                                <Run FontWeight="Bold" Text="Type: " />
                                                                <Run Text="{Binding CateGoryID}" />
                                                            </TextBlock>

                                                            <TextBlock
                                                                Margin="0,5,0,0"
                                                                FontSize="16"
                                                                FontWeight="Bold"
                                                                Foreground="White">
                                                                <Run Text="Price: " />
                                                                <Run Foreground="#FFA500" Text="{Binding Price}" />
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!--  Order  -->

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon
                                    Width="30"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    Kind="PackageVariantClosed" />
                                <TextBlock HorizontalAlignment="Center" Text="Order" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="0.4*" />
                            </Grid.RowDefinitions>
                            <DataGrid
                                x:Name="DataGridOrder"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                HeadersVisibility="All"
                                IsReadOnly="True"
                                ItemsSource="{Binding  DatagridViewOrder}"
                                SelectionUnit="{Binding ElementName=selectionUnitComboBox, Path=SelectedValue}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.Header>
                                            <CheckBox x:Name="HeaderCheckbox" Click="HeaderCheckbox_Click"/>
                                        </DataGridTemplateColumn.Header>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding IsSelected , Mode=TwoWay}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTextColumn Header="Id" Binding="{Binding ProductId }" Width="*"/>
                                    <DataGridTextColumn Header="Name" Binding="{Binding ProductName}" Width="*"/>
                                    <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="*"/>
                                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="*"/>
                                    <DataGridTextColumn Header="Total Aumount" Binding="{Binding TotalAmount}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>








                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <StackPanel
                                        Grid.Row="0"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Width="120"
                                            Margin="0,0,20,0"
                                            FontSize="20"
                                            Text="Total: "
                                            TextAlignment="Right" />
                                        <TextBlock
                                            x:Name="tblTotalPriceOrder"
                                            FontSize="20"
                                            Foreground="Green"
                                            Text="" />
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Row="1"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Width="120"
                                            Margin="0,0,20,0"
                                            FontSize="20"
                                            Text="Quantity"
                                            TextAlignment="Right" />
                                        <TextBlock
                                            x:Name="tblTotalQuanityOrder"
                                            FontSize="20"
                                            Text="" />
                                    </StackPanel>
                                </Grid>


                                <StackPanel
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                                        <Button
                                            x:Name="btnDeleteProduct"
                                            Width="100"
                                            Margin="0,0,20,0"
                                            Background="{StaticResource ColorRedsolid}"
                                            Content="Delete" />
                                        <Button
                                            x:Name="btnUpdateProduct"
                                            Width="100"
                                            Content="Update" />
                                    </StackPanel>
                                    <Button
                                        x:Name="btnOrderProductByUser"
                                        Grid.Column="1"
                                        Width="220"
                                        VerticalAlignment="Bottom"
                                        Background="Orange"
                                        Content="Order" />
                                </StackPanel>

                            </Grid>

                        </Grid>
                    </TabItem>

                    <!--  Profile  -->

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon
                                    Width="30"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    Kind="CardAccountDetailsOutline" />
                                <TextBlock HorizontalAlignment="Center" Text="Profile" />
                            </StackPanel>
                        </TabItem.Header>
                        <StackPanel Margin="16">
                            <TextBlock
                                Margin="0,0,0,8"
                                Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                                Text="Sounds" />
                            <TextBlock>
                                <Run Text="tab 4 content. Default look and behaviors." />
                                <LineBreak />
                                <LineBreak />
                            </TextBlock>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </materialDesign:Card>
        </Grid>
    </Grid>



</Window>
