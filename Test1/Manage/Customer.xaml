<Window
    x:Class="Test1.Manage.Customer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test1.UserControlBar"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Customer"
    Width="1000"
    Height="521"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <local:ControlBarUC Control.MouseDoubleClick="ControlBarUC_MouseDoubleClick" />
        </Grid>
        <Grid Grid.Row="1">
            <materialDesign:Card>
                <TabControl Style="{StaticResource MaterialDesignNavigationRailTabControl}" TabStripPlacement="left">



                    <!--  Cart Shopping  -->
                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon
                                    Width="30"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    Kind="Cart" />
                                <TextBlock HorizontalAlignment="Center" Text="Shop" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid Background="{StaticResource MaterialDesign.Brush.Chip.Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.6*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70" />
                                <RowDefinition Height="80" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="10,5,0,0"
                                Background="White"
                                CornerRadius="10" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="30,5,10,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">

                                <TextBox
                                    x:Name="txtFillterByName"
                                    Width="200"
                                    Height="40"
                                    Padding="20,0,0,0"
                                    HorizontalAlignment="Left"
                                    materialDesign:HintAssist.Hint="Search by Name"
                                    BorderBrush="{StaticResource ColorGrayBoder}"
                                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                    TextChanged="TextBox_TextChanged" />


                            </StackPanel>
                            <StackPanel
                                Grid.Column="1"
                                Margin="0,0,20,0"
                                VerticalAlignment="Center">
                                <ComboBox
                                    x:Name="FilledComboBox"
                                    materialDesign:HintAssist.Hint="Type"
                                    DisplayMemberPath="CategoryName"
                                    IsEnabled="{Binding Path=IsChecked, ElementName=FilledComboBoxEnabledCheckBox}"
                                    ItemsSource="{Binding ListCategory}"
                                    SelectedItem="{Binding SelectedCategory}"
                                    SelectionChanged="FilledComboBox_SelectionChanged"
                                    Style="{StaticResource MaterialDesignFilledComboBox}" />
                            </StackPanel>

                            <!--  bill order of customer  -->
                            <Border
                                Grid.Row="0"
                                Grid.RowSpan="4"
                                Grid.Column="3"
                                Margin="10,10,20,0"
                                Padding="10"
                                Background="#f5f5f5"
                                BorderBrush="#ccc"
                                BorderThickness="1"
                                CornerRadius="10">

                                <StackPanel x:Name="productDetailPanel">
                                    <!--  Ảnh sản phẩm ở trên cùng  -->
                                    <Grid Margin="0,0,0,0" VerticalAlignment="Top">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!--  Button "View Order"  -->
                                        <Button
                                            x:Name="btnViewOrder"
                                            Grid.Column="0"
                                            Width="120"
                                            Margin="5"
                                            HorizontalAlignment="Right"
                                            Background="Orange"
                                            Click="btnViewOrder_Click"
                                            Content="View Cart"
                                            FontWeight="Bold"
                                            Foreground="White" />

                                        <!--  Button "Clear"  -->
                                        <Button
                                            x:Name="btnClear"
                                            Grid.Column="1"
                                            Margin="5"
                                            HorizontalAlignment="Left"
                                            Background="{StaticResource PrimaryHueMidBrush}"
                                            Click="btnClear_Click"
                                            Content="Add To Cart"
                                            FontWeight="Bold"
                                            Foreground="White" />
                                    </Grid>
                                    <Image
                                        x:Name="ImangePathProduct"
                                        Width="100"
                                        Height="100"
                                        Margin="0,20,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        Source="{Binding ImangePathProduct}" />

                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <!--  Product Name  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Product ID & Type  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Variants  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Quantity  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Price  -->
                                        </Grid.RowDefinitions>

                                        <!--  Product Name  -->
                                        <StackPanel
                                            Grid.Row="0"
                                            Grid.ColumnSpan="2"
                                            Margin="0,5"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="Name: " />
                                            <TextBlock
                                                x:Name="tbxProductName"
                                                FontSize="16"
                                                Text="{Binding ProductName}" />
                                        </StackPanel>

                                        <!--  Product ID  -->
                                        <StackPanel
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Margin="0,5"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="ID: " />
                                            <TextBlock
                                                x:Name="tbxProductID"
                                                FontSize="16"
                                                Text="{Binding ProductId}" />
                                        </StackPanel>

                                        <!--  Product Type  -->
                                        <StackPanel
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Margin="0,5"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="Type: " />
                                            <TextBlock
                                                x:Name="tbxProducType"
                                                FontSize="16"
                                                Text="{Binding Category.CategoryName}" />
                                        </StackPanel>

                                        <!--  Variant  -->
                                        <StackPanel
                                            Grid.Row="2"
                                            Grid.ColumnSpan="2"
                                            Margin="0,5"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="Variants: " />
                                            <ComboBox
                                                x:Name="cbxProductVariants"
                                                Width="100"
                                                Margin="60,0,0,0"
                                                VerticalAlignment="Center"
                                                HorizontalContentAlignment="Center"
                                                DisplayMemberPath="Storage"
                                                SelectionChanged="cbxProductVariants_SelectionChanged" />

                                        </StackPanel>

                                        <!--  Quantity (with NumericUpDown)  -->
                                        <StackPanel
                                            Grid.Row="3"
                                            Grid.ColumnSpan="2"
                                            Margin="0,5"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="Quantity: " />
                                            <materialDesign:NumericUpDown
                                                x:Name="tbxProductStock"
                                                Width="100"
                                                Margin="50,0,0,0"
                                                VerticalAlignment="Center"
                                                HorizontalContentAlignment="Center"
                                                Maximum="999"
                                                Minimum="0"
                                                ValueChanged="tbxProductStock_ValueChanged"
                                                Value="1" />
                                        </StackPanel>

                                        <!--  Price  -->
                                        <StackPanel
                                            Grid.Row="4"
                                            Grid.ColumnSpan="2"
                                            Height="30"
                                            Margin="0,10,0,0"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="Price: " />
                                            <TextBlock
                                                x:Name="tbxProductPrice"
                                                Margin="30,0,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Foreground="Green" />
                                        </StackPanel>
                                    </Grid>

                                    <Border
                                        Width="300"
                                        Height="1"
                                        Margin="0,20,0,0"
                                        Background="{StaticResource ColorGrayBoder}"
                                        Opacity="2" />
                                    <StackPanel Margin="0,20,0,0" Orientation="Horizontal">

                                        <TextBlock
                                            Grid.Column="0"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Left"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Text="Total" />
                                        <TextBlock
                                            x:Name="tblTotalCart"
                                            Grid.Column="1"
                                            Margin="20,0,0,0"
                                            HorizontalAlignment="left"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Foreground="Green" />

                                    </StackPanel>
                                </StackPanel>
                            </Border>





                            <!--  Information shop  -->
                            <Border
                                Grid.Row="1"
                                Grid.RowSpan="3"
                                Grid.ColumnSpan="2"
                                Margin="10,10,0,0"
                                Background="White"
                                CornerRadius="10">
                                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding ListProducts}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border
                                                    Width="220"
                                                    Margin="10"
                                                    Padding="10"
                                                    Background="#F1F1F1"
                                                    BorderThickness="1"
                                                    CornerRadius="12"
                                                    Cursor="Hand"
                                                    MouseDown="Border_MouseDown">
                                                    <StackPanel>
                                                        <!--  Ảnh sản phẩm  -->
                                                        <Image
                                                            Width="auto"
                                                            Margin="0,0,0,10"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Source="{Binding ImagePathProduct}"
                                                            Stretch="UniformToFill" />

                                                        <!--  Thông tin cơ bản của sản phẩm  -->
                                                        <StackPanel
                                                            Margin="0,5,0,0"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Top">
                                                            <TextBlock
                                                                FontSize="18"
                                                                FontWeight="Bold"
                                                                Text="{Binding ProductName}" />

                                                            <TextBlock
                                                                Margin="0,5,0,5"
                                                                FontSize="14"
                                                                Text="{Binding ProductDescription}"
                                                                TextWrapping="Wrap" />

                                                            <TextBlock Margin="0,5,0,0" FontSize="14">
                                                                <Run FontWeight="Bold" Text="ID: " />
                                                                <Run Text="{Binding ProductId}" />
                                                            </TextBlock>

                                                            <TextBlock Margin="0,5,0,0" FontSize="14">
                                                                <Run FontWeight="Bold" Text="Type: " />
                                                                <Run Text="{Binding Category.CategoryName}" />
                                                            </TextBlock>


                                                        </StackPanel>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!--  Order  -->

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon
                                    Width="30"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    Kind="PackageVariantClosed" />
                                <TextBlock HorizontalAlignment="Center" Text="Cart" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="0.4*" />
                            </Grid.RowDefinitions>
                            <DataGrid
                                x:Name="DataGridOrder"
                                materialDesign:DataGridAssist.SelectedCellBorderBrush="{x:Null}"
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                HeadersVisibility="All"
                                IsReadOnly="True"
                                ItemsSource="{Binding ViewOrders}"
                                SelectionUnit="{Binding ElementName=selectionUnitComboBox, Path=SelectedValue}" SelectionChanged="DataGridOrder_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn
                                        Width="0.7*"
                                        Binding="{Binding OrderId}"
                                        Header="Order ID" />
                                    <DataGridTextColumn
                                        x:Name="tblFullName"
                                        Width="0.7*"
                                        Binding="{Binding FullName}"
                                        Header="Name" />
                                    <DataGridTextColumn
                                        Width="0.7*"
                                        Binding="{Binding PhoneNumber}"
                                        Header="Phone" />
                                    <DataGridTextColumn
                                        Width="0.7*"
                                        Binding="{Binding OrderAddress}"
                                        Header="Address" />
                                    <DataGridTextColumn
                                        Width="0.7*"
                                        Binding="{Binding TotalQuantity}"
                                        Header="Total Quantity" />
                                    <DataGridTextColumn
                                        Width="0.7*"
                                        Binding="{Binding TotalPrice, StringFormat='{}{0:C}'}"
                                        Header="Total Price" />
                                    <DataGridTextColumn
                                        Width="0.7*"
                                        Binding="{Binding OrderDate, StringFormat='{}{0:dd/MM/yyyy}'}"
                                        Header="Order Date" />
                                    <DataGridTextColumn
                                        Width="0.7*"
                                        Binding="{Binding PaymentMethod}"
                                        Header="Payment" />
                                    <DataGridTemplateColumn Width="0.7*" Header="Order Status">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    FontWeight="Bold"
                                                    Text="{Binding OrderStatus}"
                                                    TextAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding OrderStatus}" Value="Pressing...">
                                                                    <Setter Property="Foreground" Value="Orange" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding OrderStatus}" Value="Pending">
                                                                    <Setter Property="Foreground" Value="Green" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding OrderStatus}" Value="Completed">
                                                                    <Setter Property="Foreground" Value="Blue" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding OrderStatus}" Value="Cancelled">
                                                                    <Setter Property="Foreground" Value="Red" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>








                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <StackPanel
                                        Grid.Row="0"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Width="120"
                                            Margin="0,0,20,0"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Text="Total: "
                                            TextAlignment="Right" />
                                        <TextBlock
                                            x:Name="tblTotalPriceOrder"
                                            FontSize="20"
                                            Foreground="Green"
                                            Text="" />
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Row="1"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            Width="120"
                                            Margin="0,0,20,0"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Text="Quantity:"
                                            TextAlignment="Right" />
                                        <TextBlock
                                            x:Name="tblTotalQuanityOrder"
                                            FontSize="20"
                                            Text="" />
                                    </StackPanel>
                                </Grid>


                                <StackPanel
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <StackPanel
                                        Margin="0,0,0,10"
                                        HorizontalAlignment="Right"
                                        Orientation="Horizontal">
                                        <Button
                                            x:Name="btnOrderProductByUser"
                                            Grid.Column="1"
                                            Width="220"
                                            VerticalAlignment="Bottom"
                                            Background="Green"
                                            Click="btnOrderProductByUser_Click"
                                            Content="Payment" />

                                    </StackPanel>
                                    <Button
                                        x:Name="btnUpdateProduct"
                                        Grid.Column="1"
                                        Width="220"
                                        VerticalAlignment="Bottom"
                                        Background="#FF003CFF"
                                        Content="Update" Click="btnUpdateProduct_Click" />
                                </StackPanel>

                            </Grid>

                        </Grid>
                    </TabItem>

                    <!--  Profile  -->

                    <!--  ProFile  -->
                    <TabItem Width="80">
                        <TabItem.Header>
                            <StackPanel Width="auto" Height="auto">
                                <materialDesign:PackIcon
                                    Width="30"
                                    Height="30"
                                    Margin="0,0,0,3"
                                    HorizontalAlignment="Center"
                                    Kind="CardAccountDetails" />
                                <TextBlock HorizontalAlignment="Center" Text="Profile" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.5*" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20" />
                                <RowDefinition Height="0.5*" />
                                <RowDefinition Height="0.7*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="20" />
                            </Grid.RowDefinitions>
                            <Border
                                Grid.Row="2"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Width="670"
                                Height="1"
                                Margin="10,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Background="Black"
                                BorderBrush="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}"
                                Opacity="0.2" />
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="2"
                                Orientation="Horizontal">
                                <Border
                                    Width="200"
                                    Padding="10"
                                    Background="#FFCCF3FC"
                                    CornerRadius="10">
                                    <StackPanel>
                                        <TextBlock
                                            Padding="5"
                                            HorizontalAlignment="Left"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="#FFAA7BB1"
                                            Text="Your Wallet" />

                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">

                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Foreground="#FF0FBB3F"
                                                Text="$" />

                                            <TextBlock
                                                x:Name="txtTotalMoneyUser"
                                                Margin="0,0,15,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Foreground="#FF0FBB3F"
                                                TextAlignment="Left" />

                                            <Button
                                                x:Name="btnNaptien"
                                                HorizontalAlignment="Right"
                                                Background="#FFAA7BB1"
                                                Click="btnNaptien_Click"
                                                Foreground="White">
                                                <materialDesign:PackIcon
                                                    Width="24"
                                                    Height="24"
                                                    Kind="CashPlus" />
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>


                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="10,10,0,0"
                                Orientation="Vertical">
                                <TextBlock
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Text="My Profile" />
                                <TextBlock Margin="0,10,0,0" Text=" Manage profile information for account security" />
                            </StackPanel>
                            <Border
                                Grid.Row="2"
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Width="1"
                                Height="270"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Background="Black"
                                BorderBrush="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}"
                                Opacity="0.2" />
                            <StackPanel
                                Grid.Row="2"
                                Grid.RowSpan="2"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <Image
                                    x:Name="ProfileImage"
                                    Width="100"
                                    Height="100"
                                    Margin="0,30,0,30">
                                    <Image.Clip>
                                        <EllipseGeometry
                                            Center="50,50"
                                            RadiusX="50"
                                            RadiusY="50" />
                                    </Image.Clip>
                                </Image>
                                <Button
                                    x:Name="btnChoosePicture"
                                    Width="150"
                                    Margin="0,0,0,20"
                                    HorizontalContentAlignment="Center"
                                    Click="btnChoosePicture_Click"
                                    Content="Choose Picture" />
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{StaticResource ColorGrayBoder}"
                                    Text=" 49 / 5.000 Maximum file size 1 MB Format: .JPEG, .PNG"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />

                            </StackPanel>
                            <Grid
                                Grid.Row="2"
                                Grid.RowSpan="2"
                                Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel
                                    Grid.Column="0"
                                    Height="187"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                    <TextBlock
                                        Margin="0,0,0,10"
                                        FontSize="15"
                                        Text="User Name " />
                                    <TextBlock
                                        Margin="0,8,0,10"
                                        FontSize="15"
                                        Text="Full Name "
                                        TextAlignment="Right" />
                                    <TextBlock
                                        Margin="0,5,0,0"
                                        FontSize="15"
                                        Text="Email "
                                        TextAlignment="Right" />
                                    <TextBlock
                                        Margin="0,12,0,0"
                                        FontSize="15"
                                        Text="Number "
                                        TextAlignment="Right" />
                                    <TextBlock
                                        Margin="0,10,0,0"
                                        FontSize="15"
                                        Text="Gender "
                                        TextAlignment="Right" />
                                    <TextBlock
                                        Margin="0,12,0,0"
                                        FontSize="15"
                                        Text="Birtday "
                                        TextAlignment="Right" />
                                </StackPanel>

                                <StackPanel
                                    Grid.Column="2"
                                    Margin="15,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox
                                            x:Name="txtUserName"
                                            Width="100"
                                            Margin="0,0,10,10"
                                            IsReadOnly="True" />
                                        <DockPanel VerticalAlignment="Center">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Text="Role: " />
                                            <TextBlock
                                                x:Name="txtRoleAccount"
                                                Margin="20,0,0,0"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                FontWeight="Bold"
                                                Text="{Binding roleAccount}" />
                                        </DockPanel>
                                    </StackPanel>
                                    <TextBox x:Name="txtFullName" Margin="0,0,0,10" />
                                    <TextBox x:Name="txtEmail" Margin="0,0,0,10" />
                                    <TextBox x:Name="txtPhoneNumber" Margin="0,0,0,10" />
                                    <StackPanel
                                        Grid.Column="2"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <RadioButton
                                            x:Name="rdoMale"
                                            Margin="0,0,20,0"
                                            Content="Male"
                                            GroupName="Gender" />
                                        <RadioButton
                                            x:Name="rdoFeMale"
                                            Margin="0,0,20,0"
                                            Content="Female"
                                            GroupName="Gender" />
                                        <RadioButton
                                            x:Name="rdoOther"
                                            Content="Other"
                                            GroupName="Gender" />
                                    </StackPanel>
                                    <DatePicker
                                        x:Name="dpBirthday"
                                        materialDesign:TextFieldAssist.HasClearButton="True"
                                        Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                                </StackPanel>
                                <Button
                                    x:Name="btnSaveProFile"
                                    Grid.ColumnSpan="2"
                                    Width="100"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Background="{StaticResource ColorSave}"
                                    Click="btnSaveProFile_Click"
                                    Content="Save" />
                            </Grid>
                        </Grid>
                    </TabItem>
                </TabControl>
